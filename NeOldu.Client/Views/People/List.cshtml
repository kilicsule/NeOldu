@model NeOldu.Client.Models.PeopleViewModel.PeopleHomeViewModel
@if (Model.PagedList.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Haber</th>
                <th>Başlık</th>
            </tr>
        </thead>
        @foreach (var item in Model.PagedList)
        {
            <tr>
                <td>
                    <div class="input-group-prepend">
                        <a class="btn btn-outline-secondary btn-sm" title="Detay"
                           href="@Url.Action("Details", "People", new { id = item.Id })">
                            <i class="fa fa-eye"></i>
                        </a>
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="@Url.Action("Edit", "People", new { id = item.Id })">Güncelleme</a>
                            <a class="dropdown-item" href="@Url.Action("PeopleDelete", "People", new { id = item.Id })">Sil</a>
                        </div>
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.News)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
            </tr>
        }
    </table>
}
else
{
    <div class="card-body">
        @await Html.PartialAsync("ErrorList", "İletişim Yok!")
    </div>
}