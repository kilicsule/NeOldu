@model NeOldu.Client.Models.DeathDateViewModel.DeathDateHomeViewModel
@if (Model.PagedList.Count() > 0)
{
    <table class="table table-striped table-hover">
        @{ int Sayac = 1; }
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">#</th>
                <th scope="col">Tarih</th>
            </tr>
        </thead>
        @foreach (var item in Model.PagedList)
        {
            <tr>
                <td>
                    <div class="input-group-prepend">
                        <a class="btn btn-outline-secondary btn-sm" title="Detay"
                           href="@Url.Action("Details", "DeathDate", new { id = item.Id })">
                            <i class="fa fa-eye"></i>
                        </a>
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="@Url.Action("Edit", "DeathDate", new { id = item.Id })">Güncelleme</a>
                            <a class="dropdown-item" href="@Url.Action("DeathDateDelete", "DeathDate", new { id = item.Id })">Sil</a>
                        </div>
                    </div>
                </td>
                <td>@Sayac @{ Sayac += 1; }</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
            </tr>
        }
    </table>
}
else
{
    <div class="card-body">
        @await Html.PartialAsync("ErrorList", "Tarih Yok!")
    </div>
}